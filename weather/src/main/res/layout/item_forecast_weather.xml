<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/temperature_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Temperature"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintBaseline_toBaselineOf="@+id/temperature_label"
            app:layout_constraintStart_toEndOf="@+id/temperature_label"
            tools:text="36" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 C"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/temperature_label"
            app:layout_constraintEnd_toEndOf="parent">
        </TextView>

        <TextView
            android:id="@+id/humidity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Humidity"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="@+id/temperature_label"
            app:layout_constraintTop_toBottomOf="@+id/temperature_label" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintBaseline_toBaselineOf="@+id/humidity_label"
            app:layout_constraintStart_toEndOf="@+id/humidity_label"
            tools:text="35.85" />

        <TextView
            android:id="@+id/wind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Wind"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toStartOf="@+id/humidity_label"
            app:layout_constraintTop_toBottomOf="@+id/humidity_label" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_color"
            app:layout_constraintBaseline_toBaselineOf="@+id/wind_label"
            app:layout_constraintStart_toEndOf="@+id/wind_label"
            tools:text="2345" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>