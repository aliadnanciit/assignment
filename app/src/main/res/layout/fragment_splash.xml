<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/off_white_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/text_shortly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shortly"
        android:textColor="@android:color/black"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView android:id="@+id/image_splash"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h, 6:4.5"
        android:src="@drawable/ic_shortly_illustration"
        app:layout_constraintTop_toBottomOf="@id/text_shortly"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:id="@+id/text_shorter_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More than just \nshorter links"
        android:textColor="@android:color/black"
        style="@style/TextAppearance.MaterialComponents.Headline3"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/image_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build your brands recognition and get detail insights on how your links are performing."
        android:textColor="@android:color/black"
        android:textAlignment="center"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_shorter_links"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_start"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:letterSpacing="0"
        android:paddingVertical="16dp"
        android:text="Start"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="6dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2ACFCF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_description"
        app:layout_constraintRight_toRightOf="@id/text_description" />

</androidx.constraintlayout.widget.ConstraintLayout>