<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.App1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_color</item>
        <item name="colorPrimaryVariant">@color/off_white_color</item>
        <item name="colorOnPrimary">@color/off_white_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_color</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- set status bar icon color light blackish -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>